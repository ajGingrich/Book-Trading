<!DOCTYPE html>
<html>
  <% include partials/head.ejs %>
  <body>
    <% include partials/nav.ejs %>

    <!-- warning message -->
    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><p><%= message %></p></div>
    <% } %>

    <h3>All Books</h3>

    <div class="container-fluid">
        <!-- add extra container element for Masonry -->
        <div class="grid">
            <div class="grid-sizer col-xs-4"></div>
            <% if (allBooks) { %>
            <% for (var i=0; i< allBooks.length; i++) { %>
            <div class="grid-item col-xs-4">
                <div class="grid-item-content">
                    <a href="<%- allBooks[i].url %>" target="_blank"><img class="bookImage" src="<%- allBooks[i].img %>"></a>
                    <a href="/exchange/<%- allBooks[i]._id %>"><img class="plusImage" src="/img/exchange.png"></a>
                    <h5 class="firstHeader"><%- allBooks[i].title %></h5>
                    <h5 class="secondHeader"><%- allBooks[i].author %></h5>
                </div>
            </div>
            <% } %>
            <% } %>
        </div>
    </div>

    <% include partials/footer.ejs %>
  </body>

</html>
