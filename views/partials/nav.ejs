<div class="container-fluid nav-container">
  <h4>Andrew's Book Trading App</h4>
  <form id="searchForm" action="/search" method="post">
    <div class="form-inline">
      <input type="text" class="form-control" name="searchQuery" placeholder="Search Books" required>
      <button type="submit" class="btn btn-primary"><span>Go</span></button>
      <span id="navSpan">Powered by <a href="https://developers.google.com/books/" target="_blank">Google Books APIs</a></span>
    </div>
  </form>
    <% if (login) { %>
  <nav>
    <a class="menu" href="/">Home</a>
    <p>|</p>
    <a class="menu" href="/profile">Profile</a>
    <p>|</p>
    <a class="menu" href="/userBooks">My Books</a>
    <p>|</p>
    <a class="menu" href="/logout">Logout</a>
  </nav>
    <% } else { %>
  <nav>
    <a class="menu" href="/">Home</a>
    <p>|</p>
    <div class="dropdown">
      <a class="menu dropdown-toggle" data-toggle="dropdown">Login
        <span class="caret"></span></a>
      <ul class="dropdown-menu pull-right">
        <li><a href="/auth/facebook" class="btn btn-primary btn-facebook"><span class="fa fa-facebook"></span> Facebook</a></li>
        <li><a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a></li>
        <li><a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a></li>
      </ul>
    </div>
  </nav>
    <% } %>
</div>